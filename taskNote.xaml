<myLib:Task x:Class="Alice.taskNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:myLib="clr-namespace:Alice"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Заметка" Height="300" Width="300">
    <Grid x:Name="Main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtHeader" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Margin="10,10,100,0" FontWeight="Bold" Text="{Binding Header}" BorderThickness="1,0,0,0" BorderBrush="{x:Null}"/>
        <TextBox Text="{Binding Text}" Margin="10,46,10,10" BorderBrush="{x:Null}" BorderThickness="1,0,0,0" TextChanged="TextBox_TextChanged"/>
    </Grid>
</myLib:Task>
